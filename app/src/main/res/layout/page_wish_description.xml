<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bulletin_bg_img"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:alpha="0.7"
        android:background="@drawable/tint"
        android:backgroundTint="@android:color/darker_gray"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/containerIcons"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/containerCatagory"

                android:layout_width="0dp"
                android:layout_height="@dimen/icon_default_size"
                android:layout_weight="1"
                android:background="@drawable/tint">


                <ImageView
                    android:id="@+id/imgWishCat"
                    android:layout_width="@dimen/icon_default_size"
                    android:layout_height="@dimen/icon_default_size"
                    android:layout_gravity="left" />

                <TextView
                    android:id="@+id/wishRequestText"

                    android:text="Dexamol Cold"
                    android:paddingTop="3dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerReward"

                android:layout_width="0dp"
                android:layout_height="@dimen/icon_default_size"
                android:layout_weight="1"
                android:background="@drawable/tint">

                <ImageView
                    android:id="@+id/imgRewardCat"

                    android:layout_width="@dimen/icon_default_size"
                    android:layout_height="@dimen/icon_default_size"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/txtRewardText"

                    android:text="Three beers"
                    android:gravity="center"
                    android:paddingTop="3dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txtDescPageTitle"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/descPageTitleTextPadding"
            android:text="Antibiotics"
            android:textColor="@android:color/black"
            android:textSize="@dimen/descPageTitleTextSize" />

        <TextView
            android:id="@+id/txtDescPageDesc"
            android:padding="@dimen/descPageDescTextPadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tint"
            android:text="Not feeling too well, I think I have the flu, does anyone have Dexamol Cold?"
            android:textColor="@android:color/black"
            android:textSize="@dimen/descPageDescTextSize" />
    </LinearLayout>


    <Button
        android:id="@+id/btnGrantWish"

        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/grantWish"
        android:textStyle="bold" />
</LinearLayout>