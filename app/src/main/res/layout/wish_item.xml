<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vet_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/wish_note"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/wish_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/wish_padding"
        android:textStyle="bold"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wish_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/wish_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="@dimen/bullet_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/offer_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/wish_padding"
        android:textStyle="bold"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/offer_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/offer_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="@dimen/bullet_text_size" />
    </LinearLayout>
</LinearLayout>